<%- include("partials/header.ejs") %>

<section>
  <container class="p-horizontal-center container">
      <form action="/verify-email" method="post">
          <div class="mb-3">
              <input type="hidden" name="code" value="<%= locals.code %>">
              <input type="hidden" name="email" value="<%= locals.email %>"> 
              <input type="hidden" name="username" value="<%= locals.username %>"> 
              <input type="hidden" name="password" value="<%= locals.password %>">
              <label class="form-label">Email Verification Code</label>
              <input type="text" class="form-control" name="verificationCode" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text" <% if (locals.error) { %>  style="color: red">
                   <%= locals.error %>
                  <% } else {%> > Enter the verification code sent to your email.<% }%> </div>
          <button type="submit" style="border-width: 2px; border-color: black;" class="btn blue-background white-text">Verify</button>
      </form>
  </container>
</section>


<%- include("partials/footer.ejs") %>